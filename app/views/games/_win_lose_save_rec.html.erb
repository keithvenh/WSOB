<% if ps.w? %>
  (W, <%= get_wins(ps.player, game) %>-<%= get_losses(ps.player, game) %>)
<% elsif ps.l? %>
  (L, <%= get_wins(ps.player, game) %>-<%= get_losses(ps.player, game) %>)
